# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
FIRESTORE_DATABASE_ID=(default)

# Server Configuration
PORT=8080
NODE_ENV=production

# HMAC Secrets (one per organization)
# Format: HMAC_SECRET_<orgId>=<secret>
HMAC_SECRET_acme-123=supersecret
HMAC_SECRET_corp-456=anothersecret

# Optional: Logging
LOG_LEVEL=info
